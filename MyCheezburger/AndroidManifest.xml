<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.swipetab"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.mycheezburger.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PageIndicatorDefaults" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mycheezburger.activity.ItemDetailActivity"
            android:label="@string/title_activity_item_detail" >
        </activity>
        <activity
            android:name="com.example.mycheezburger.adapter.ItemAdapter"
            android:label="@string/title_activity_item_adapter" >
        </activity>
        <activity
            android:name="com.example.mycheezburger.activity.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/Theme.PageIndicatorTextColorBlue" >
        </activity>
        <activity
            android:name="com.example.mycheezburger.activity.FollowersActivity"
            android:label="@string/title_activity_followers" >
        </activity>
        <activity
            android:name="com.example.mycheezburger.activity.FollowingActivity"
            android:label="@string/title_activity_following" >
        </activity>
    </application>

</manifest>
