<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/imgSingleItem1"
        android:layout_width="160dp"
        android:layout_height="106dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/item2" />

    <TextView
        android:id="@+id/txtSingleItemName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
		android:layout_below="@+id/imgSingleItem1"
        
        android:text="@string/itemName"
        android:textSize="15sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imgUserSingleItem1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imgSingleItem1"
        android:layout_alignRight="@+id/imgSingleItem1"
        android:clickable="true"
        android:src="@drawable/user" />

</RelativeLayout>
