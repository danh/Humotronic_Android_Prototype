<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF00"
    tools:context="com.example.swipetab.FragmentUserProfile" >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/user" />
    
    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEdit"
        android:layout_alignTop="@+id/imgUser"
        android:text="@string/name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />
    
    <TextView
        android:id="@+id/txtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
		android:layout_marginLeft="150dp"
        android:textSize="40sp"
        android:text="@string/edit" />
    
    <ImageView
        android:id="@+id/imgFollow"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:src="@drawable/follow" />

    
    
    <GridView
        android:id="@+id/userPicGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:layout_below="@+id/linearLayoutText"
        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"

		android:background="#DDDDDD"

        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:columnWidth="380dp"
        android:stretchMode="columnWidth"
        android:gravity="center" >
    </GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/linearLayoutButton"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtEdit"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btnFollowers"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:textSize="50sp"
            android:text="@string/follower" />

        <Button
            android:id="@+id/btnFollowing"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:textSize="50sp"
            android:text="@string/following" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/linearLayoutText"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true" 
        android:layout_alignLeft="@+id/linearLayoutButton"
        android:layout_below="@+id/linearLayoutButton"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp">
        <TextView
	        android:id="@+id/txtAll"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/all"
	        android:textSize="40sp" />
	
	    <TextView
	        android:id="@+id/txtSymbolVertical1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/symbol_vertical"
	        android:textSize="40sp" />
	    
	    <ImageView
	        android:id="@+id/imgCamera"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:src="@drawable/camera" />
	    
	    <TextView
	        android:id="@+id/txtUploads"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="40sp"
	        android:text="@string/uploads" />
	    
	    <TextView
	        android:id="@+id/txtSymbolVertical2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="40sp"
	        android:text="@string/symbol_vertical" />
	    
	    <TextView
	        android:id="@+id/txtReposts"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="40sp"
	        android:text="@string/reposts" />
    </LinearLayout>

</RelativeLayout>
